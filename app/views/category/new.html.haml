-if  @category.errors.any?
  %ul.col-sm-offset-2.col-sm-10
    - @category.errors.full_messages.each do |msg|
      %li= msg
      
= form_for @category, url:category_create_path, html: {class:"form-horizontal"} do |f| 
  %div.form-group
    =f.label :name, "Nome",class: "control-label col-sm-2"
    %div.col-sm-5
      =f.text_field :name, class: "form-control"
  %div.form-group
    =f.label :type_category, "Tipo",class: "control-label col-sm-2"
    %div.col-sm-4
      =f.radio_button :type_category, 'D'
      =f.label :type_category_d, 'Despesa'
      =f.radio_button :type_category, 'R'
      =f.label :type_category_r,'Receita'
  %div.form-group
    =f.label :frequency_id, "FrequÃªncia",class: "control-label col-sm-2"
    %div.col-sm-2
      =f.collection_select  :frequency_id, Frequency.all, :id, :name,{ prompt: "Selecione"} 
  %div.form-group
    =f.label :date_scheduled, "Data",class: "control-label col-sm-2"
    %div.col-sm-3
      =f.text_field :date_scheduled, class: "form-control"
  %div.form-group
    =f.label :value, "Valor",class: "control-label col-sm-2"
    %div.col-sm-2
      =f.text_field :value, class: "form-control"
  %div.form-group
    %div.col-sm-offset-2.col-sm-10 
      =f.submit "Salvar", class: "btn btn-success"

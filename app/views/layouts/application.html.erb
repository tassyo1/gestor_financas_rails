<!DOCTYPE html>
<html>
<head>
  <title>GestorFinancasRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render "layouts/menu" %>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="col-sm-offset-2 col-sm-10 alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>

  <div class="container">
   <%= yield %>
  </div>

</body>
</html>
